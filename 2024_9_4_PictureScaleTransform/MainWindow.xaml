    <Grid>
        <StackPanel Orientation="Vertical" Margin="16" Background="#0F0F13">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="滴滴上分 " FontSize="20" Foreground="#FFFFFF" FontWeight="Bold"/>
                <Border Margin="8 0" VerticalAlignment="Center" Background="#B3FFFFFF" Height="4" Width="4" CornerRadius="2"/>
                <TextBlock Text="大神带玩，秒上号" FontSize="20" Foreground="#B3FFFFFF" VerticalAlignment="Center"/>
            </StackPanel>
            <ItemsControl HorizontalAlignment="Stretch" Background="Green" ItemsSource="{Binding CardList}" SizeChanged="ItemsControl_SizeChanged">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemHeight="{Binding CardHeight}" ItemWidth="{Binding CardWidth}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid x:Name="CardGrid" MouseEnter="CardGrid_OnMouseEnter"
                              MouseLeave="CardGrid_OnMouseLeave" Margin="8 6" >
                            <componet:ClippingBorder BorderRadius="4" Background="#1d1d21">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Background="LightCoral">
                                        <!--banner-->
                                        <Border Margin="6  6 0 0" Background="#0183FF" Height="20" CornerRadius="2" VerticalAlignment="Top" HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal" Margin="2,2,4,2">
                                                <Image Width="16" Height="16" Source="{DynamicResource ProfessionalIcon}"/>
                                                <TextBlock Text="职业选手" FontSize="12" Foreground="White"/>
                                            </StackPanel>
                                        </Border>
                                        <StackPanel Orientation="Horizontal" Margin="16 0 0 8" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                            <Border CornerRadius="10" Width="20" Height="20">
                                                <Image Source="{StaticResource wz}"/>
                                            </Border>
                                            <TextBlock Text="{Binding Section}" FontSize="12" Margin="5" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    <!--底部信息-->
                                    <StackPanel Grid.Row="1" Margin="16,8,16,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Nick}" FontSize="16" Foreground="#FFFFFF" Margin="0,0,10,0"/>
                                            <!--直播-->
                                            <Image Visibility="{Binding AnchorStatus,Converter={x:Static cv:EnumToVisibleConverter.Instance},ConverterParameter={x:Static enum:Status.Living}}"
                                                   Source="{DynamicResource AnchorLivingIcon}"       Width="12" Height="12"  Margin="0,0,0,-5"/>
                                            <!--在线-->
                                            <StackPanel Visibility="{Binding AnchorStatus,Converter={x:Static cv:EnumToVisibleConverter.Instance},ConverterParameter={x:Static enum:Status.Online}}"
                                                     Orientation="Horizontal"  VerticalAlignment="Center">
                                                <Image Source="{DynamicResource AnchorOnlineIcon}" Width="4" Height="4"  Margin="0,0,5,0"/>
                                                <TextBlock Text="在线" Foreground="#B2FFFFFF" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,8">
                                            <TextBlock Text="服务134人" Foreground="#7FFFFFFF" FontSize="12" VerticalAlignment="Center"/>
                                            <TextBlock Text="|" FontSize="10" Foreground="#7FFFFFFF" VerticalAlignment="Center" Margin="8,0"/>
                                            <TextBlock Text="好评率100%" Foreground="#7FFFFFFF" FontSize="12" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <!--放大后的附加数据区-->
                                        <StackPanel x:Name="AdditionalDataPanel" Visibility="{Binding IsHover, Converter={x:Static cv:BoolToVisibility.Instance}}">
                                            <Border CornerRadius="2" VerticalAlignment="Center" Background="#35FFE44D"  HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding Title}" FontSize="12" Foreground="#FFD736" Margin="4,0"/>
                                            </Border>
                                            <Grid  Margin="0,8,0,0" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <StackPanel Orientation="Horizontal" >
                                                        <TextBlock FontSize="22" Foreground="#ff3944"  Text="{Binding AccompanyingPrice}" />
                                                        <TextBlock FontSize="12" Foreground="#7FFFFFFF" Text=" 虎牙币/局" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Grid>
                                                <Border Grid.Column="1"  HorizontalAlignment="Left" CornerRadius="2"
                                                     Margin="4" Background="#EA384F"  Width="28" Height="16"
                                                     Visibility="{Binding AccompanyingPrice,Converter={x:Static cv:DoubleToVisibleConverter.Instance}}">
                                                    <Image Source="{DynamicResource FreePlayIcon}"/>
                                                </Border>
                                                <Button Grid.Column="2" Content="立即下单">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate>
                                                                        <Border Background="#FFE44D" CornerRadius="10" Width="64" Height="24">
                                                                            <TextBlock Text="立即下单" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </componet:ClippingBorder>
                            <Border Background="Transparent" BorderThickness="1" CornerRadius="4">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="#15FFFFFF"/>
                                        <Style.Triggers>
                                            <Trigger Property="UIElement.IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#FFD736"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>
