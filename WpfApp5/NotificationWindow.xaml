        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d" AllowsTransparency="True" WindowStyle="None" Background="#AA000000"
        Title="NotificationWindow" Height="350" Width="600">

    <Grid>
        <TextBlock Text="你有新的消息!" Margin="10"/>
        <Button Content="关闭" HorizontalAlignment="Right"
                VerticalAlignment="Top" Margin="10" Click="Button_Click" />
    </Grid>

</Window>
