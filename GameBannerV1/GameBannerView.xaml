<UserControl x:Class="GameBannerV1.GameBannerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:GameBannerV1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ui:ClippingBorder BorderRadius="8">
        <Grid>
            <!--banner图片显示-->
            <Image Source="/GameBannerV1;Component/Resources/banner.png" Stretch="Fill"/>
            <!--游戏左下区域-->
            <StackPanel VerticalAlignment="Bottom" Margin="32 0 0 20">
                <TextBlock Text="元梦之星" Foreground="White" FontSize="30" FontWeight="Bold">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" BlurRadius="3.35" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0 15 0 15">
                    <TextBlock Text="一键大屏开黑 领100元红包" Foreground="#B3FFFFFF"/>
                </StackPanel>
                <Button Height="36" Width="168" HorizontalAlignment="Left"/>
            </StackPanel>

        </Grid>
    </ui:ClippingBorder>

</UserControl>
