<UserControl x:Class="WpfTestApp.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTestApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="A">
        <Button x:Name="B" Content="B" Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center" Loaded="Button_Loaded" Opacity="1">
            <Button.RenderTransform>
                <TranslateTransform x:Name="BTransform" X="0" Y="0"/>
            </Button.RenderTransform>
        </Button>
    </Grid>

</UserControl>
